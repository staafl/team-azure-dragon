@(Html.Kendo().DropDownList()
    .Name("Lesson") // Name of the widget should be the same as the name of the property
    .DataValueField("LessonId") // The value of the dropdown is taken from the EmployeeID property
    .DataTextField("Name") // The text of the items is taken from the EmployeeName property
    .BindTo((System.Collections.IEnumerable)ViewData["lessons"]) // A list of all employees which is populated in the controller
        .OptionLabel("Select item...")// "Please select:"
    .HtmlAttributes(new { style = "min-width:100px, max-width:200px" })
)