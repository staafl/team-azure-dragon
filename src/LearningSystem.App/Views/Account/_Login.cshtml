@model LearningSystem.Models.LoginViewModel

<div id="login-form-menu">
    @using (Ajax.BeginForm("Login", "Account", 
        new AjaxOptions {
        UpdateTargetId = "login-form-ajax",
        HttpMethod="POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "redirectToHome(data)"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
                <br />
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password)
                <br />
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Log in" class="btn" />
        </div>
        @Html.ValidationSummary(true)
    }
</div>