@model IEnumerable<LearningSystem.App.ViewModels.ExerciseViewModel>

@{
    ViewBag.Title = "Excersices";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.IsAvailable)
                {
                    <a href="/Excercise/Index?exId=@item.ExerciseId" class="btn excercise btn-inverse" data-toggle="tooltip" data-placement="bottom"
                       title="@item.Description">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                }
                else
                {
                    <span class="btn excercise btn-inverse" data-toggle="tooltip" data-placement="bottom"
                          title="You must complete the previous lessons first!">
                        @Html.DisplayFor(modelitem => item.Name)
                    </span>

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.IsAvailable)
                {
                    if (item.IsCompleted)
                    {
                        <p>This lesson is completed!</p>
                    }
                    else
                    {
                        <p>Not completed yet!</p>
                    }
                }
                else
                {
                    <p>You must complete the previous lessons first!</p>
                }

            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $(".excercise").tooltip();
    });
</script>
